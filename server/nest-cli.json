{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [],
    "watchAssets": true
  },
  "exclude": [
    "**/check-*.ts",
    "**/close-*.ts",
    "**/debug-*.ts",
    "**/*.spec.ts",
    "test",
    "dist",
    "node_modules"
  ]
}
